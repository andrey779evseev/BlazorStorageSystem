@inherits LayoutComponentBase

@inject NavigationManager NavigationManager

<PageTitle>Система складского учета продуктовой базы</PageTitle>

<div class="flex h-screen justify-between w-full">
    <main class="flex flex-col h-full w-5/6">
        <div class="flex items-center p-5 bg-gradient-to-r from-cyan-500 to-blue-500">
            <a class="font-bold text-3xl text-white" href="">Система складского учета продуктовой базы</a>
        </div>
        <article class="p-5 bg-gradient-to-r from-cyan-500 to-blue-500 h-full">
            @Body
        </article>
    </main>
    <aside class="w-1/6 p-5 bg-gradient-to-r from-blue-500 to-cyan-500 h-full pt-24">
        <a href="/products" class="flex justify-around items-center w-40 bg-white/20 border-2 h-10 mb-2 rounded-xl text-white text-lg font-bold hover:bg-blue-300 transition-all @Active(1)">
            <ion-icon name="cube-outline"></ion-icon>
            <span>Продукты</span>
        </a>
        <a href="/sellers" class="flex justify-around items-center w-40 bg-white/20 border-2 h-10 mb-2 rounded-xl text-white text-lg font-bold hover:bg-blue-300 transition-all @Active(2)">
            <ion-icon name="people-outline"></ion-icon>
            <span>Продавцы</span>
        </a>
    </aside>
</div>



@code
{
    private string Active(int index)
    {
        if (index == 1)
        {
            return NavigationManager.Uri.Contains("products") ? "border-indigo-500 text-indigo-500" : "border-white/70";
        }
        return NavigationManager.Uri.Contains("sellers") ? "border-indigo-500 text-indigo-500" : "border-white/70";
    }
}
